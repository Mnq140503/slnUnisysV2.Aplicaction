<!DOCTYPE html>
<html data-schema="../../../schema.json">
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - slnUnisysV2</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/slnUnisysV2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/v/dt/jszip-3.10.1/dt-2.1.8/b-3.2.0/b-colvis-3.2.0/b-html5-3.2.0/b-print-3.2.0/datatables.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/yadcf@0.9.4/jquery.dataTables.yadcf.css">
    <link rel="stylesheet" type="text/css" href="lib/vendor/toastr/toastr.min.css">
    <style>
        /* Estilos de error */
        .error {
            border: 2px solid red;
            box-shadow: 0 0 5px red;
        }
    </style>
</head>
<body>
<div id="loading-banner" style="
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.8);
    z-index: 1050;
    display: flex;
    align-items: center;
    justify-content: center;
    display: none;
">
    <div>
        <div class="spinner" style="
            border: 8px solid #f3f3f3;
            border-top: 8px solid #3498db;
            border-radius: 50%;
            width: 70px;
            height: 70px;
            animation: spin 1s linear infinite;
        "></div>
        <p style="text-align: center; font-weight: bold; margin-top: 10px;">Cargando...</p>
    </div>
</div>

<nav id="sidebar" class="d-flex flex-column">
    <div class="sidebar-header p-3 text-center">
        <button id="toggle-sidebar" class="btn btn-sm btn-light">
            <i class="fas fa-bars"></i>
        </button>
    </div>
    <!-- Navegación principal -->
    <ul class="nav flex-column">
        <li class="nav-item">
            <a asp-action="Index" asp-controller="Home" class="nav-link d-flex align-items-center active">
                <i class="fas fa-home"></i>
                <span class="ms-2">Home</span>
            </a>
        </li>
        <li class="nav-item has-submenu">
            <a href="#" class="nav-link d-flex align-items-center">
                <i class="fa-solid fa-building"></i>
                <span class="ms-2">Gestión Comercial</span>
                @* <i class="fas fa-chevron-down ms-auto"></i> *@
            </a>
            <ul class="submenu list-unstyled ms-4">
                <li><a asp-controller="Comercial" asp-action="Index" class="nav-link">Solicitud de Trabajo</a></li>
                @*                     <li><a href="#" class="nav-link">Project 2</a></li>
 *@ </ul>
        </li>
        <li class="nav-item">
            <a href="#" class="nav-link d-flex align-items-center">
                <i class="fas fa-cogs"></i>
                <span class="ms-2">Settings</span>
            </a>
        </li>
    </ul>
    <!-- Footer fijo -->
    <div class="sidebar-footer text-center p-3">
        <small>&copy; 2024 MyApp</small>
    </div>
</nav>

<main class="main-content">
    <header class="d-flex justify-content-between align-items-center p-3 shadow">
        <h1 class="h4">@ViewData["Title"]</h1>
        <button id="theme-toggle" class="btn btn-secondary">
            <i class="fas fa-moon"></i> Toggle Theme
        </button>
    </header>
    <section class="p-4">
        @RenderBody()
    </section>
</main>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/v/dt/jszip-3.10.1/dt-2.1.8/b-3.2.0/b-colvis-3.2.0/b-html5-3.2.0/b-print-3.2.0/datatables.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script type="text/javascript" src="lib/vendor/toastr/toastr.min.js"></script>
<script type="text/javascript" src="lib/vendor/loadingoverlay/loadingoverlay.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
